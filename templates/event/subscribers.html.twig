{%  extends 'base.html.twig' %}
{% block body %}
<div class="container-fluid">

    <h2 class=""> Liste des inscris pour l'évennement {{ result.event.title }}</h2>
    <a href="{{ path('events_export_subscribers',{slug: result.event.slug}) }}" type="button" class="btn btn-primary my-3">Exporter <i class="fa fa-file"></i></a>
    <div class="col-lg-12 mt-3">
        <div class="table-responsive">
            <table class="table table-hover text-nowrap">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Email</th>
                </tr>
                </thead>
                <tbody>
                {% set count = 0 %}
                {% for subscriber in result.subscribers %}
                    {% set count = count + 1 %}
                    <tr>
                        <td>{{ count }}</td>
                        <td>{{ subscriber.lastname }}</td>
                        <td>{{ subscriber.firstname }}</td>
                        <td>{{ subscriber.email }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <div class="pagination my-3">
                {{ knp_pagination_render(result.subscribers, '/pagination/bootstrap_pagination.html.twig') }}
            </div>
        </div>
    </div>

</div>
{% endblock %}