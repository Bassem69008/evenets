{% extends 'base.html.twig' %}

{% block title %}Creation d'un sujet{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>
            {% if mode =="create" %}
            Créer un Sujet
            {% else %}
            Modifier le sujet
            {% endif %}
        </h1>
        <div class="row">
            <div class="col-lg-12 bg-white mt-3 " style="border-radius:10px;">

                {{ form_start(form) }}
                <div class="card bg-white border-0">
                    <div class="card-body">

                        {{ form_row(form.title) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.type) }}
                        {{ form_row(form.duration) }}
                        {{ form_row(form.speacker) }}
                        <div class="d-flex ">

                                <button  type="submit" class="btn btn-warning mt-3">
                                    {% if mode =="create" %}
                                        Créer
                                    {% else %}
                                        Modifier
                                    {% endif %}
                                </button>
                        </div>

                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
{% endblock %}
